{
    "compilerOptions": {
        "types": ["node"],
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitReturns": true,
        "noImplicitThis": false,
        "noUnusedLocals": false,
        "sourceMap": true,
        "jsx": "react-jsx",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "src/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*",
        "src/custom.d.ts"
    ]
}